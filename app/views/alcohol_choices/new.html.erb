<% content_for(:title, "ぴったりのおつまみを探す") %>
<%= image_tag "header_awa.png", class: "headerimage" %>
  <div class="card-img-overlay">
    <div class="container">
      <h1 class="font-weight-bold title-font">飲みたいお酒は？</h1>
    </div>
  </div>
  <div class="container alcohol-container">
    <div class="wrapper">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="justify-content-center"> 
          <div class='text-center'>
            <div class="alcohol_choice">
              <%= link_to beer_snacks_path do %>
                <%= image_pack_tag "media/images/beer.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg' %>
              <% end %>
              <%= link_to wine_snacks_path do %>
                <%= image_pack_tag "media/images/wine.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg' %>
              <% end %>
              <%= link_to sake_snacks_path do %>
                <%= image_pack_tag "media/images/sake.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg p-1 mb-5 bg-info rounded' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
