<%= image_pack_tag "media/images/header_awa.png", class: "headerimage" %>
  <div class="card-img-overlay">
    <div class="container">
      <h1 class="font-weight-bold title-font">飲みたいお酒は？</h1>
    </div>
  </div>
  <div class="container mb-5">
    <div class="wrapper">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="justify-content-center"> 
          <div class='text-center'>
            <div class="alcohol_choice">
              <%= link_to beer_snacks_path do %>
                <%= image_pack_tag "media/images/beer.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg' %>
              <% end %>
              <%= link_to wine_snacks_path do %>
                <%= image_pack_tag "media/images/wine.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg' %>
              <% end %>
              <%= link_to sake_snacks_path do %>
                <%= image_pack_tag "media/images/sake.png", size: "250x250", class: 'rounded-circle m-5 shadow-lg p-1 mb-5 bg-info rounded' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <ul class="nav nav-tabs nav-pills">
        <li class="nav-item col p-0">
          <%= link_to choice_path, class: "nav-link bookmark-tab active" do %>
            <i class="fas fa-glass-cheers fa-3x"></i></i>
          <% end %>
        </li>
        <li class="nav-item col p-0">
          <%= link_to snacks_path, class: "nav-link bookmark-tab" do %>
            <i class="fas fa-search fa-3x"></i></i></i>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item col p-0">
            <%= link_to user_path(current_user.id), class: "nav-link bookmark-tab" do %>
              <i class="far fa-user-circle fa-3x"></i></i></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </div>