<%= image_pack_tag "media/images/header_awa.png", class: "headerimage" %>
<div class="card-img-overlay">
  <div class="container">
    <h1 class="font-weight-bold title-font"><%= t '.title', name: current_user.name %></h1>
  </div>
</div>

    <div class="container text-center">
      <div class="bookmark">
        <% if current_user.bookmarks.present? %>
          <div id="pageScroll" data-page="">
            <div id="records_table" class="row">
              <%= render @user_bookmarks %>
            </div>
            <div class="loader" id="loader"></div>
            <div id="div_next_link">
              <%= render 'snacks/next_link' %>
            </div>
          </div>
        <% else %>
            <p class="h5">まだ気になっているおつまみがありません。<br>一覧から探しましょう！</p>
        <% end %>
      </div>
    </div>
 

<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <ul class="nav nav-tabs nav-pills">
        <li class="nav-item col p-0">
          <%= link_to choice_path, class: "nav-link wine-tab" do %>
            <i class="fas fa-glass-cheers"></i>
          <% end %>
        </li>
        <li class="nav-item col p-0">
          <%= link_to snacks_path, class: "nav-link search-tab" do %>
            <i class="fas fa-search"></i>
          <% end %>
        </li>
        <li class="nav-item col p-0">
          <%= link_to mypage_path, class: "nav-link nomal-tab active" do %>
            <i class="far fa-user-circle"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'pages/mypage' %>