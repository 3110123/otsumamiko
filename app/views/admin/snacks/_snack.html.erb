<tr class="text-center">
  <td><%= snack.id %></td>
  <td><%= snack.image.attached? %></td>
  <td><%= link_to snack.name, admin_snack_path(snack), method: :get %></td>
  <td><%= snack.alcohol_i18n %></td>
  <td><%= snack.tags.pluck(:name).join(', ') %></td>
  <td><%= snack.bookmarks.length %></td>
  <td><%= snack.reviews.length %></td>
  <td>
    <ul>
      <li class='list-inline-item'>
        <%= button_to "編集", edit_admin_snack_path(snack), method: :get, class: "btn btn-danger" %>
      </li>
      <li class='list-inline-item'>
        <%= button_to "削除", admin_snack_path(snack), method: :delete, data: { confirm: '本当に削除してもよろしいですか？'}, class: "btn btn-secondary" %>
      </li>
    </ul>
  </td>
</tr>