<h1 class="text-center my-5">ユーザー編集</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <div class="card text-center">
      <div class="card-body">
      <%= form_with model: @user, url: admin_user_path(@user), local: true, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "text-info" %>
          <%= f.text_field :name, value: @user.name, class: "form-control" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :name %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "text-info" %>
          <%= f.text_field :email, value: @user.email, class: "form-control" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :email %>
        </div>
        <div class="form-group">
          <%= f.label :role, class: "text-info" %>
          <%= f.select :role, User.roles.keys.map {|k| [I18n.t("enums.user.role.#{k}"), k]}, class: "form-control" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :role %>
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>