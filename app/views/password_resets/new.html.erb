<div class="bg-warning">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <div class='text-center'>
            <h1 class="font-weight-bold m-5">パスワードを忘れた方</h1>
          </div>

          <%= form_with model: @user, url: password_resets_path, local: true, method: :post do |f| %>
            <div class="form-group">
              <%= f.label :メールアドレス %><br />
              <%= f.text_field :email, class: "form-control", type: "text", placeholder: "メールアドレス" %>
            </div><br>
            <div class="actions text-center">
              <%= f.submit 'メールを送信する', class: "btn btn-danger my-5" %>
            </div>
          <% end %>
          <div class="text-center my-5">
          <%= link_to '新規登録ページ', new_user_path %>/
          </div>
      </div>
    </div>
  </div>
</div>
