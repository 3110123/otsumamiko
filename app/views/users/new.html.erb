<div style="background-color: #FDBB3C;">
  <div class="column is-half is-offset-one-quarter">
    <div class="has-text-centered">
      <br><br><br><br><br><br><br><br>
        <h1 class="title is-1 is-spaced has-text-black">新規登録</h1>
      <br><br><br><br><br><br><br>
    </div>
    <%= form_with model: @user, local: true do |f| %>
      <div class="field">
        <%= f.label :おなまえ %><br />
        <%= f.text_field :name, class: "input", type: "text", placeholder: "おなまえ" %>
        <%= render 'shared/error_messages', model: f.object, attribute: :name %>
      </div><br />
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.text_field :email, class: "input", type: "text", placeholder: "メールアドレス" %>
        <%= render 'shared/error_messages', model: f.object, attribute: :email %>
      </div><br />
      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.text_field :password, class: "input", type: "text", placeholder: "パスワード" %>
        <%= render 'shared/error_messages', model: f.object, attribute: :password %>
      </div><br />
      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.text_field :password_confirmation, class: "input", type: "text", placeholder: "パスワード確認" %>
        <%= render 'shared/error_messages', model: f.object, attribute: :password_confirmation %>
      </div><br />
      <div class="container has-text-centered">
        <%= f.submit '送信', class: "button is-danger" %>
      </div>
    <% end %>
    <br /><br /><br />
      <div class='has-text-centered'>
        <%= link_to 'ログインページ', login_path %>/
        <%= link_to 'パスワードを忘れた方' %>
      </div>
      <br /><br />
  </div>
</div>
