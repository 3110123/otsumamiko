<div class="bg-warning">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <div class='text-center'>
            <h1 class="font-weight-bold m-5">新規登録</h1>
          </div>

          <%= form_with model: @user, local: true do |f| %>
            <div class="form-group">
              <%= f.label :おなまえ %><br />
              <%= f.text_field :name, class: "form-control", type: "text", placeholder: "おなまえ" %>
              <%= render 'shared/error_messages', model: f.object, attribute: :name %>
            </div>
            <div class="form-group">
              <%= f.label :メールアドレス %><br />
              <%= f.text_field :email, class: "form-control", type: "text", placeholder: "メールアドレス" %>
              <%= render 'shared/error_messages', model: f.object, attribute: :email %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード %><br />
              <%= f.text_field :password, class: "form-control", type: "text", placeholder: "パスワード" %>
              <%= render 'shared/error_messages', model: f.object, attribute: :password %>
            </div>
            <div class="form-group">
              <%= f.label :パスワード確認 %><br />
              <%= f.text_field :password_confirmation, class: "form-control", type: "text", placeholder: "パスワード" %>
              <%= render 'shared/error_messages', model: f.object, attribute: :password %>
            </div>
            <div class="actions text-center">
              <%= f.submit '送信', class: "btn btn-danger my-5" %>
            </div>
          <% end %>
          <div class="text-center my-5">
          <%= link_to 'ログイン', login_path %>
          </div>
      </div>
    </div>
  </div>
</div>


