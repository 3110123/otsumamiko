<div class="bg-warning">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="card my-5">
          <div class="card-body">
            <div class='text-center'>
              <h1 class="font-weight-bold m-5">おつまみ一覧</h1>
            </div>
              <%= render 'snacks/search_form_for', url: snacks_path %>
              <%== pagy_nav(@pagy) %>
            <% if @pagy.vars[:count] > 0 %>
              <div class="row">
                <%= render @snack %>
              </div>
            <% else %>
              <p>検索結果は 0 件です。</p>
            <% end %>
            <%== pagy_nav(@pagy) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

