                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <ul class="nav nav-tabs nav-pills">
        <li class="nav-item col p-0">
          <%= link_to choice_path, class: "nav-link wine-tab active" do %>
            <i class="fas fa-glass-cheers"></i></i>
          <% end %>
