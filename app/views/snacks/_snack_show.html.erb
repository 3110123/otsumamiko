<div class="modal-content">
  <div class="modal-body">
    <div class="row">
      <%= image_tag '', size: '300x200', class: 'card-img-top' %>
        <div class='text-center'>
          <%= snack.alcohol %><br>x<br>
          <%= snack.name %>
          <p>コメント</p>
          <button>コメント入力</button>
          <div style="display: none;">
            <p>評価</p>
            <%= form_with model: snack, local: true do |f| %>
            <div class="field" id="star">
              <p>総合</p>
              <p>悪い</p>
              <%= f.radio_button :rate, "1" %>
              <%= f.radio_button :rate, "2" %>
              <%= f.radio_button :rate, "3", checked: true %>
              <%= f.radio_button :rate, "4" %>
              <%= f.radio_button :rate, "5" %>
              <p>良い</p>
            </div>
            <div class="field" id="star">
              <p>甘味</p>
              <p>良い</p>
              <%= f.radio_button :sweetness, "1" %>     
              <%= f.radio_button :sweetness, "2" %>
              <%= f.radio_button :sweetness, "3", checked: true %>
              <%= f.radio_button :sweetness, "4" %>
              <%= f.radio_button :sweetness, "5" %>
              <p>悪い</p>
            </div>
            <div class="field" id="star">
              <p>塩味</p>
              <p>良い</p>
              <%= f.radio_button :salty, "1" %>
              <%= f.radio_button :salty, "2" %>
              <%= f.radio_button :salty, "3", checked: true %>
              <%= f.radio_button :salty, "4" %>
              <%= f.radio_button :salty, "5" %>
              <p>悪い</p>
            </div>
            <div class="field" id="star">
              <p>酸味</p>
              <p>良い</p>
              <%= f.radio_button :acidity, "1" %>
              <%= f.radio_button :acidity, "2" %>
              <%= f.radio_button :acidity, "3", checked: true %>
              <%= f.radio_button :acidity, "4" %>
              <%= f.radio_button :acidity, "5" %>
              <p>悪い</p>
            </div>
            <div class="field" id="star">
              <p>旨味</p>
              <p>良い</p>
              <%= f.radio_button :taste, "1" %>
              <%= f.radio_button :taste, "2" %>
              <%= f.radio_button :taste, "3", checked: true %>
              <%= f.radio_button :taste, "4" %>
              <%= f.radio_button :taste, "5" %>
              <p>悪い</p>
            </div>
            <div class="field" id="star">
              <p>香り</p>
              <p>良い</p>
              <%= f.radio_button :scent, "1" %>
              <%= f.radio_button :scent, "2" %>
              <%= f.radio_button :scent, "3", checked: true %>
              <%= f.radio_button :scent, "4" %>
              <%= f.radio_button :scent, "5" %>
              <p>悪い</p>
            </div>
            <div class="form-group">
              <%= f.label :感想 %><br />
              <%= f.text_field :comment, class: "form-control", type: "text", placeholder: "コメント" %>
            </div>
            <div class="actions text-center">
              <%= f.submit '投稿する', class: "btn btn-danger my-5" %>
            </div>
            <% end %>
          </div><br>
          <%= render @reviews, review: @review %>
        </div>
    </div>
  </div>
</div>