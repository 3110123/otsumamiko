                    <%= image_pack_tag("media/images/healthy.jpg", size: "450x450") %>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
        <div id="qestion_04" style="display: none;">
          <div class="row">
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                <h2>おしゃれ</h2>
                  <%= link_to "#", class: "button", id: "q_07", "data-turbolinks": false do %>
                    <%= image_pack_tag("media/images/healthy.jpg", size: "450x450") %>    
                  <% end %>
              </div>
            </div>
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                <h2>定番</h2>
                  <%= link_to "#", class: "button", id: "q_08", "data-turbolinks": false do %>
                    <%= image_pack_tag("media/images/healthy.jpg", size: "450x450") %>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

