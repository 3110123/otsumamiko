<%= search_form_for @q, url: url do |f| %>
  <div class="row justify-content-center align-items-center mb-5">
    <div class="col-8">
      <%= f.search_field :name_cont, placeholder: "おつまみをキーワードで検索", class: 'form-control comment-area serch_field shadow-lg rounded-pill pl-5' %>
    </div>
    <div class="col-2">
      <%= f.submit '検索', class: 'h4 text-light btn-danger rounded-pill py-4 px-5 shadow-lg' %>
    </div>
  </div>
<% end %>
