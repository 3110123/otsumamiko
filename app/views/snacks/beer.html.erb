<% content_for(:title, "おつまみでお困りの方") %>
<div class="container food-choice w-75 food-select">
  <div class="card my-5 shadow-lg p-3 mb-5 bg-white rounded">
    <div class="card-body">
      <div class='text-center'>
        <h1 class="font-weight-bold mt-5 title-font">今日の気分はどっち？</h1>
      </div>
        <div id="qestion_01" class="fit">
          <div class="row">
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                <%= link_to "#", class: "button q1", id: "q_01", data: {id: Tag.find_by(name: "おかず").id}, "data-turbolinks": false do %>
                <div class="is-layer-dot">
                  <h2>がっつりご飯</h2>
                  <%= image_tag("pizza.jpg", size: "450x450", class: "shadow-lg rounded") %>
                </div>
                <% end %>
              </div>
            </div>
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                <%= link_to "#", class: "button", id: "q_02", data: {id: Tag.find_by(name: "軽食").id}, "data-turbolinks": false do %>
                <div class="is-layer-dot">
                  <h2>軽くおつまみ</h2>
                  <%= image_tag("snack.jpg", size: "450x450", class: "shadow-lg rounded") %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div id="qestion_02" style="display: none;">
          <div class="row">
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                  <%= link_to "#", class: "button", id: "q_03", data: {id: Tag.find_by(name: "肉類").id}, "data-turbolinks": false do %>
                  <div class="is-layer-dot">
                    <h2>お肉系</h2>
                    <%= image_tag("meat.jpg", size: "450x450", class: "shadow-lg rounded") %>
                  </div>
                  <% end %>
              </div>
            </div>
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                  <%= link_to "#", class: "button", id: "q_04", data: {id: Tag.find_by(name: "魚類").id}, "data-turbolinks": false do %>
                  <div class="is-layer-dot">
                    <h2>お魚系</h2>
                    <%= image_tag("seafood.jpg", size: "450x450", class: "shadow-lg rounded") %>
                  </div>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
        <div id="qestion_03" style="display: none;">
          <div class="row">
            <div class="col-xl-6 col-md-12 my-3">
              <div class='text-center'>
                  <%= link_to "#", class: "button", id: "q_05", data: {id: Tag.find_by(name: "150kcal以下").id}, "data-turbolinks": false do %>
