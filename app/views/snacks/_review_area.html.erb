<div class="collapse" id="collapseExample">
  <h2 class="my-5 pt-3">評価</h2>
    <%= form_with model: @review, url: [@snack, @review] do |f| %>
      <div class="radio-field my-5 py-3">
        <h3 style="display:inline;" class="pr-3">総合</h3>
        <p style="display:inline;">悪い</p>
        <%= f.radio_button :rate, "1" %>
        <%= f.label "1", for: "review_rate_1" %>
        <%= f.radio_button :rate, "2" %>
        <%= f.label "2", for: "review_rate_2" %>
        <%= f.radio_button :rate, "3", checked: true %>
        <%= f.label "3", for: "review_rate_3" %>
        <%= f.radio_button :rate, "4" %>
        <%= f.label "4", for: "review_rate_4" %>
        <%= f.radio_button :rate, "5" %>
        <%= f.label "5", for: "review_rate_5" %>
        <p style="display:inline;" class="pl-3">良い</p>
      </div>
      <div class="radio-field mb-5">
        <h3 style="display:inline;" class="pr-3">甘味</h3>
        <p style="display:inline;">悪い</p>
        <%= f.radio_button :sweetness, "1" %>
        <%= f.label "1", for: "review_sweetness_1" %>
        <%= f.radio_button :sweetness, "2" %>
        <%= f.label "2", for: "review_sweetness_2" %>
        <%= f.radio_button :sweetness, "3", checked: true %>
        <%= f.label "3", for: "review_sweetness_3" %>
        <%= f.radio_button :sweetness, "4" %>
        <%= f.label "4", for: "review_sweetness_4" %>
        <%= f.radio_button :sweetness, "5" %>
        <%= f.label "5", for: "review_sweetness_5" %>
        <p style="display:inline;" class="pl-3">良い</p>
      </div>
      <div class="radio-field mb-5">
        <h3 style="display:inline;" class="pr-3">塩味</h3>
        <p style="display:inline;">悪い</p>
        <%= f.radio_button :salty, "1" %>
        <%= f.label "1", for: "review_salty_1" %>
        <%= f.radio_button :salty, "2" %>
        <%= f.label "2", for: "review_salty_2" %>
        <%= f.radio_button :salty, "3", checked: true %>
        <%= f.label "3", for: "review_salty_3" %>
        <%= f.radio_button :salty, "4" %>
        <%= f.label "4", for: "review_salty_4" %>
        <%= f.radio_button :salty, "5" %>
        <%= f.label "5", for: "review_salty_5" %>
