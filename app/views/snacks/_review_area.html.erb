      </div>
      <div class="radio-field mb-5">
        <h3 style="display:inline;" class="pr-3">香り</h3>
        <p style="display:inline;">悪い</p>
        <%= f.radio_button :scent, "1" %>
        <%= f.label "1", for: "review_scent_1" %>
        <%= f.radio_button :scent, "2" %>
