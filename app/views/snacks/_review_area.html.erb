        <p style="display:inline;">悪い</p>
        <%= f.radio_button :acidity, "1" %>
        <%= f.label "1", for: "review_acidity_1" %>
        <%= f.radio_button :acidity, "2" %>
        <%= f.label "2", for: "review_acidity_2" %>
        <%= f.radio_button :acidity, "3", checked: true %>
        <%= f.label "3", for: "review_acidity_3" %>
        <%= f.radio_button :acidity, "4" %>
        <%= f.label "4", for: "review_acidity_4" %>
        <%= f.radio_button :acidity, "5" %>
        <%= f.label "5", for: "review_acidity_5" %>
        <p style="display:inline;" class="pl-3">良い</p>
      </div>
      <div class="radio-field mb-5">
        <h3 style="display:inline;" class="pr-3">旨味</h3>
        <p style="display:inline;">悪い</p>
        <%= f.radio_button :taste, "1" %>
        <%= f.label "1", for: "review_taste_1" %>
        <%= f.radio_button :taste, "2" %>
        <%= f.label "2", for: "review_taste_2" %>
        <%= f.radio_button :taste, "3", checked: true %>
        <%= f.label "3", for: "review_taste_3" %>
        <%= f.radio_button :taste, "4" %>
        <%= f.label "4", for: "review_taste_4" %>
        <%= f.radio_button :taste, "5" %>
        <%= f.label "5", for: "review_taste_5" %>
